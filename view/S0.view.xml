<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="nyt.artigos.controller.S0">
	<App>
		<pages>
			<Page title="Artigos do NYT">
				<content>
					<List items="{/response/docs}">
						<headerToolbar>
							<Toolbar >
								<content>
									<SearchField  placeholder="Termo de pesquisa" search="onSearch"/>
								</content>
							</Toolbar>
						</headerToolbar>
						<items>
							<StandardListItem title="{headline/main}"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>